{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Contact
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="image-bg-size">
		<div class="text-center image-bg">
			<div class="titre-contact">

				<h1>
					Contactez-nous !
				</h1>
				<div class="mt-5">
				{% for flashMessage in app.flashes('success') %}
					<span class="alert bg-success text-light " role="alert">{{ flashMessage }}</span>
				{% endfor %}
				</div>
			</div>

			<div class="container-sms mt-4 ">
				{{form_start(form)}}
				<div class="row d-flex justify-content-center">
					<div class="col-sm-5 col-12">
						{{form_row(form.name, {'label': 'Pr√©nom'})}}
					</div>
					<div class="col-sm-5 col-12 resize">
						{{form_row(form.lastName, {'label': 'Nom'})}}
					</div>

					<div class=" col-sm-5 col-12">
						{{form_row(form.email)}}
					</div>
					<div class="col-sm-5 col-12 ">
						{{form_row(form.subject, {'label': 'Sujet'})}}
					</div>
					<div class="col-sm-10 col-12 ">
						{{form_row(form.message, { 'attr': {'rows': '10'} })}}
					</div>
					<span>
						<button formnovalidate class=" mb-4 mt-3 btn btn-xl fs-5  btn-primary">Envoyer</button>
					</span>
				</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
