{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="image-bg-size">
		<div class="text-center image-bg">
			<div class="titre-contact">

				{% for flashMessage in app.flashes('success') %}
					<div class="alert alert-success container mt-3">{{ flashMessage }}</div>
				{% endfor %}
				<h1>
					Contactez-nous !
				</h1>
			</div>
			<div class="container-lg mt-5">
				{{form_start(form)}}
				<div class="row flex-contact">
					<div class="col-5">
						{{form_row(form.name, {'label': 'Pr√©nom'})}}
					</div>
					<div class="col-5">
						{{form_row(form.lastName, {'label': 'Nom'})}}
					</div>

					<div class="col-5">
						{{form_row(form.email)}}
					</div>
					<div class="col-5">
						{{form_row(form.subject, {'label': 'Sujet'})}}
					</div>
					<div class="col-10">
						{{form_row(form.message, { 'attr': {'rows': '10'} })}}
					</div>
					<span>
						<button class="btn btn-primary">Envoyer</button>
					</span>
				</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
