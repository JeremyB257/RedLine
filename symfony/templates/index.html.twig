{% extends 'base.html.twig' %}

{% block title %}Laxar - Ventes de montres
{% endblock %}

{% block body %}
	<div class="banner container-fluid py-3 shadow-sm">
		<div class="container-lg text-center text-md-start py-5">
			<div class="row">
				<div class="col-12 col-md-6 ">
					<h1 class="fw-bold titleReveal">{{watches[0].brand}}
						{{watches[0].model}}</h1>
					<p class="text-white py-3 titleReveal">{{watches[0].description}}</p>
					<a href="{{path('app_product_show', {id: watches[0].id})}}" class="btn btn-xl btn-primary fs-5 titleReveal">Voir</a>
					<span class="d-inline-block fs-5 fw-bold ms-3 titleReveal">{{(watches[0].priceHT * 1.2) | format_currency('EUR')}}</span>
				</div>
				<div class="col-12 col-md-6 position-relative banner-img-col">
					<img class="banner-img position-absolute imgReveal" src="{{'img/' ~ (watches[0].imgUrl | split(',')[0])}}" alt="">
				</div>
			</div>
		</div>
	</div>
	<div class="about-watch-text container-lg d-flex flex-column align-items-center align-items-md-end text-center text-md-end">
		<h2 class="fw-bold primary">About the Watch</h2>
		<p class="w-sm-50 lh-lg">Watches progressed in the 17th century from spring-powered clocks, which appeared as early as the 14th century. During most of its history was a mechanical device, driven by clockwork, powered by winding a mainspring, and keeping time.</p>
	</div>
	<div class="about-watch container-lg position-relative mb-5">
		<div class="container-lg">
			<div class="row">
				<div class="col-md-6 d-none d-md-block text-center">
					<img class="about-watch-img1" src="{{asset('img/edge2.png')}}" alt="">
					<div class="square"></div>
					<div class="d-flex flex-column align-items-start w-50 m-auto mt-3 text-start">
						<p class="text-white mt-2 attrRevealLeft">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Resistante au rayure
						</p>
						<p class="text-white mt-2 attrRevealRight">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Resistante a l'eau
						</p>
						<p class="text-white mt-2 attrRevealLeft">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Bracelet en Acier
						</p>
						<p class="text-white mt-2 attrRevealRight">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Chronographe
						</p>
					</div>
				</div>
				<div class="col 12 col-md-6">
					<img class="about-watch-img" src="{{asset('img/edge.png')}}" alt="">
					<div class="text d-block d-md-none position-absolute">
						<p class="text-white mt-2 attrRevealLeft">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Resistante au rayure
						</p>
						<p class="text-white mt-2 attrRevealRight">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Resistante a l'eau
						</p>
						<p class="text-white mt-2 attrRevealLeft">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Bracelet en Acier
						</p>
						<p class="text-white mt-2 attrRevealRight">
							<i class="fa-solid fa-star"></i>
							&nbsp;&nbsp;Chronographe
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="product container-lg d-flex justify-content-center align-items-center my-5 flex-wrap">
		<div class="filter-watch">
			{% for img in (watches[0].imgUrl | split(',')) %}
				<img class="little-pictures productReveal" src="{{'img/' ~ img}}" alt="{{ watches[0].model }}">
			{% endfor %}
		</div>

		<div class="width-flex">
			<img class="w-100 main-picture watchReveal" src="{{'img/' ~ (watches[0].imgUrl | split(','))[0]}}" alt="laxar">
		</div>

		<div class="contenu">
			<h2>{{ watches[0].brand}}
				{{ watches[0].model}}</h2>
			<h4 class="price fw-bold">{{ (watches[0].priceHT * 1.2) | format_currency('EUR') }}</h4>
			<p class="text-justify">{{ watches[0].description }}</p>
			<div class="d-flex flex-column">
				<h4 ="fw-bold">Couleur</h4>
				<div class="d-flex gap-4">
					{% for color in (watches[0].color | split(',')) %}
						<div class="colors {{color}}" data-color="{{color}}"></div>
					{% endfor %}
				</div>
			</div>
			<div>
				<form action="{{path('cart.add', {id: watches[0].id})}}" method="get">
					<input type="hidden" name="color" value="green" id="form-color">
					<button class="btn btn-lg btn-primary mt-4">Acheter</button>
				</form>
			</div>
		</div>
	</div>
	<div class="container-fluid similar-product text-center my-5">
		<div class="container-lg py-4">
			<h2 class="primary fw-bold">Produits similaire</h2>

			<div class="d-flex justify-content-center align-items-center flex-wrap gap-5">
				{% for i in 1..4 %}
					<div class="watch watchReveal">
						<a class="text-decoration-none" href="{{path('app_product_show', {id: watches[i].id})}}">
							<img class="w-75" src="{{'img/' ~ (watches[i].imgUrl | split(',')[0])}}" alt="">
							<h4 class="fw-bold">{{watches[i].brand}}
								{{watches[i].model}}</h4>
							<h5 class="primary fw-bold">{{(watches[i].priceHT * 1.2) | format_currency('EUR')}}</h5>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

	<div class="home-review container-lg border border-4 border-primary my-5 reviewReveal">
		<div class="quote"></div>
		<div class="quote2"></div>

		<div id="carouselExample" class="carousel slide">
			<div class="carousel-inner">
				{% for i in 0..2 %}
					<div class="carousel-item my-3 py-5 {{ i == 0 ? 'active' : ''}}">
						<div class="reviews-container d-flex flex-column justify-content-center align-items-center">
							<div class="reviews">
								<i class="fa-solid fa-star {{reviews[i].evaluation >= 1 ? 'primary' : 'grey'}}"></i>
								<i class="fa-solid fa-star {{reviews[i].evaluation >= 2 ? 'primary' : 'grey'}}"></i>
								<i class="fa-solid fa-star {{reviews[i].evaluation >= 3 ? 'primary' : 'grey'}}"></i>
								<i class="fa-solid fa-star {{reviews[i].evaluation >= 4 ? 'primary' : 'grey'}}"></i>
								<i class="fa-solid fa-star {{reviews[i].evaluation >= 5 ? 'primary' : 'grey'}}"></i>
							</div>
							<p class="w-50 text-center my-5">{{reviews[i].content}}
							</p>
							<h5 class="fw-bold">{{reviews[i].firstname}}</h5>
						</div>
					</div>
				{% endfor %}

			</div>
			<div class="carousel-btn">
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</div>
	</div>


{% endblock %}
