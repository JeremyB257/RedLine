{% extends 'base.html.twig' %}

{% block title %}Laxar - Ventes de montres
{% endblock %}

{% block body %}
	<div class="banner container-fluid py-3 shadow-sm">
		<div class="container-lg text-center text-md-start py-5">
			<div class="row">
				<div class="col-12 col-md-6 ">
					<h1 class="fw-bold">{{watch.brand}}
						{{watch.model}}</h1>
					<p class="text-white py-3">{{watch.description}}</p>
					<button class="btn btn-xl btn-primary fs-5">Acheter</button>
					<span class="fs-5 fw-bold ms-3">{{(watch.priceHT * 1.2) | format_currency('EUR')}}</span>
				</div>
				<div class="col-12 col-md-6 position-relative banner-img-col">
					<img class="banner-img position-absolute" src="{{'img/' ~ watch.imgUrl}}" alt="">
				</div>
			</div>
		</div>
	</div>

	<div class="about-watch container-lg position-relative">
		<div class="container-lg">
			<div class="row">
				<div class="col-6"></div>
				<div class="col-6">
					<img class="about-watch-img" src="{{asset('img/edge.png')}}" alt="">
				</div>
			</div>
		</div>
	</div>

	<div class="container-lg d-flex">
		<div class="d-flex justify-content-center align-items-center">
			<div class=" widht-flex filter-watch">
				<img class="size-filter" src="{{'img/rolex.jpg'}}" alt="rolex">
				<img class="size-filter" src="{{'img/wrist.jpg'}}" alt="">
				<img class="size-filter" src="{{'img/analog.jpg'}}" alt="">
			</div>
			<div class="width-flex">
				<img class="image-laxar" src="{{'img/laxar.png'}}" alt="laxar">
			</div>
			<div class="contenu-flex">
				<h2>{{ watch.brand}}
					{{ watch.model}}</h2>
				<h4 class="price">$
					{{ watch.priceHT }}</h4>

				<p class="text-justify">{{ watch.description }}</p>
				<div class="d-flex flex-column">
					<h4 ="fw-bold">Colors</h4>
					<div class="d-flex gap-4">
						<div class="colors black"></div>
						<div class="colors gray"></div>
						<div class="colors red"></div>
					</div>
				</div>
				<div>
					<button class="btn btn-lg btn-primary mt-4">BUY-NOW</button>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
