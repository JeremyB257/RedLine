            <a href="#" class="btn btn-primary btn-lg d-block w-75 mx-auto my-5">Recevoir le lien</a>
            <a href="{{ path('app_login')}}" class="text-secondary d-block mb-5">Retour à la page de connexion </a>
        </div>
    </div>
</div>

{% endblock %}